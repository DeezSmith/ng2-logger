{
  "compileOnSave": true,
  "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2016",
      "lib": [
        "dom",
        "es7"
      ],
      "typeRoots": [
          "node_modules/@types"
      ],
      "outDir": "dist",
      "rootDir": "./src"
  },
  "exclude": [
    // "node_modules",
    "preview",
    "docs",
    "dist",
    "tests"
  ]
}
