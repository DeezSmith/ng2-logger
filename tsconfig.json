{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "watch": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "strictNullChecks": false,
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": [
      "dom",
      "es7"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "preview",
    "docs",
    "dist",
    "tests"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
